<header>
	<div class="container-fluid">
	<h1 id="logo">CMS <small><%= t :cms %></small></h1>
	</div>
	<nav class="navbar navbar-default">
		<div class="container-fluid">
		<ul class="nav navbar-nav" >
			<li><%= link_to t(:home), root_path %></li>
			<!-- 销售 -->
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t :sale %><span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li><%= link_to t(:case), cases_path %></li>
					<li class="divider"></li>
					<li><%= link_to t(:school), schools_path %></li>
					<li><%= link_to t(:source), sources_path %></li>
					<li><%= link_to t(:record), records_path %></li>
				</ul>
			</li>
			<!-- 人力资源 -->
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t :hr %><span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li><%= link_to t(:employee), employees_path %></li>
				</ul>
			</li>
			<li><%= link_to t(:about), about_path %></li>
		</ul>

		<ul class="nav navbar-nav navbar-right">
			<% if log_in? %>
			 <li><%= link_to current_user.name, employee_path(current_user) %></li>
			 <li><%= link_to t(:log_out), logout_path, method: "delete" %></li>
			<% else %>
			 <li><%= link_to t(:log_in), new_session_path %></li>	
			 <li><%= link_to t(:sign_in), new_employee_path %></li>
			<% end %>
		</ul>
	</div>
	</nav>
</header>
