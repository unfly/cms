<%= form_for @record do |f| %>

<%= render 'shared/error_messages', object: f.object %> 

<div class="row">

<div class="col-md-4">
	
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>
	</div>
		<div class="form-group">
		<%= f.label :status %>
		<%= f.select :status, ["无效","跟进","成交"], class: "form-control" %>
	</div>
	<div class="sr-only">
		<%= f.text_field :case_id %>
	</div>
	<div class="form-group">
		<%= f.submit %>
	</div>

</div>
</div>
<% end %>
